<% if model.errors.any? %>
  <div class="row">
    <div class="col-xs-offset-3 col-xs-6">
      <div id="error_explanation">
        <div class="alert alert-danger">
          <ul>
            <% model.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>