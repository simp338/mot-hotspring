<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <%= render "layouts/error_messages", model: @review %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= link_to @hotspring.name, "/hotspring/#{@hotspring[:code]}" %>のレビューを編集する</div>
      <div class="panel-body">
        <%= form_with(model: @review, url: "/hotspring/#{@hotspring[:code]}/reviews/#{@review.id}") do |f| %>
          <div class="form-group">
            <%= f.label :title, 'タイトル' %>
            <%= f.text_field :title, class: 'form-control', value: @review.title %>
          </div>

          <div class="form-group">
            <%= f.label :comment, 'コメント' %>
            <%= f.text_area :comment, class: 'form-control', value: @review.comment %>
          </div>

          <div class="form-group">
            <%= f.label :satisfaction_degree, '満足度' %>
            <%= f.text_field :satisfaction_degree, class: 'form-control', value: @review.satisfaction_degree %>
          </div>

          <div class="form-group">
            <%= f.label :visit_date, '訪問日' %>
            <%= f.text_field :visit_date, class: 'form-control', value: @review.visit_date %>
          </div>
          
          <div class="text-right">
            <%= f.submit '投稿する', class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>