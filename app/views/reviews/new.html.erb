<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <%= render "layouts/error_messages", model: @review %>
    <div class="panel panel-default">
      <div class="panel-heading"><%= link_to @hotspring.name, "/hotspring/#{@hotspring[:code]}" %>についてレビューする</div>
      <div class="panel-body">
        <%= form_with(model: @review, url: "/hotspring/#{@hotspring[:code]}/reviews", local: true) do |f| %>
          <div class="review-form">
            <div class="form-group">
              <%= f.label :title, 'タイトル' %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
  
            <div class="form-group">
              <%= f.label :comment, 'コメント' %><span id="must-input">【必須】</span>
              <%= f.text_area :comment, class: 'form-control', rows: 7 %>
            </div>
  
              <div class="form-group half-width">
                <ul>
                  <li><%= f.label :satisfaction_degree, '満足度' %></li>
                  <li><%= f.select :satisfaction_degree, satisfaction_degree_options, {}, class: 'form-control' %></li>
                </ul>
              </div>
  
              <div class="form-group half-width">
                <ul>
                  <li><%= f.label :visit_date, '訪問日' %></li>
                  <li><%= f.date_field :visit_date, class: 'form-control' %></li>
                </ul>
              </div>
            </div>
  
            <div class="text-right">
              <%= f.submit '投稿する', class: 'btn btn-success' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>